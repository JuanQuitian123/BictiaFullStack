<!-- <script>
    function Area(){  
    let area,base;
        base = prompt("Coloque el lado del cuadrado ");

        base = parseInt(base);
        area = (base * base);

        alert("El area del cuadrado es : " +  area );

    }

    function Rectangulo(){  
    let area0,base0,altura0;
        base0 = prompt("Coloque la base del rectángulo");
        altura0 = prompt("Coloque la altura del rectángulo");

        base0 = parseInt(base0);
        altura0 = parseInt(altura0);
        area0 = (base0 * altura0);

        alert("El area del rectángulo es : " +  area0 );

    }


    function Triangulo(){  
    let area1,base1,altura1;
        base1 = prompt("coloque la base del triangulo");
        altura1 = prompt("Coloque la altura del triangulo");

        base1 = parseInt(base1);
        altura1 = parseInt(altura1);
        area1 = ((base1 * altura1)/2);

        alert("El area del Triangulo es : " +  area1 );

    }


    function circulo(){  
    let area2,radio,pi;
        radio = parseFloat(prompt("coloque el radio del circulo"));
        pi = Math.PI;

        area2 = pi * Math.pow(radio,2);

        alert("El area del circulo es : " +  area2 );

    }


</script>
<form action="forml">
    <h1>Calcular area de un Cuadrado</h1>
    <input type="button" value="Cuadrado" onclick="Area()">
</form>
<form action="forml">
    <h1>Calcular area de un rectángulo</h1>
    <input type="button" value="rectángulo" onclick="Rectangulo()">
</form>
  
