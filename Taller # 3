            document.write("figura A" + "<br>");

            for (f=1;f<=4;f++)
            {
                for(c=1;c<=f;c++)
                    document.write("*");
                document.write("<br>");
            }
            for (f=5;f>=1;f--)
            {
                for(c=1;c<=f;c++)
                    document.write("*");
                document.write("<br>");
            }
            document.write("<br>");
            // Figura B

            document.write("figura B" + "<br>");
            for (f=5;f>=1;f--)
            {
                for(c=1;c<=f-f;c++)
                    document.write("&nbsp&nbsp");
                for(c=1;c<=f;c++)
                    document.write("*");
                document.write("<br>");
            }
            for (f=1;f<=5;f++)
            {
                for(c=1;c<=0;c++)
                    document.write("&nbsp&nbsp");
                for(c=1;c<=f;c++)
                    document.write("*");
                document.write("<br>");
            }
            document.write("<br>");
            // Fifura C-----------------


            document.write("figura C" + "<br>");
        let fila= prompt("Ingresa un número para figura C");

              for (f=fila;f>=1;f--)
            {
                for(c=1;c<=f-f;c++)
                    document.write("&nbsp&nbsp");
                for(c=1;c<=f;c++)
                    document.write("*");
                document.write("<br>");
            }   

